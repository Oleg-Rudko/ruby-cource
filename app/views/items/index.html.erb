<h2 style="color: #b00100; margin: 0 auto">all items</h2><br />

<% @items.each do |item| %>
<ul>
  <li><%= link_to item.name, item_path(item) %></li>
  <li><%= item.price %></li>
  <li><%= item.weight %></li>
  <li><%= item.description %></li>
  <li><%= button_to 'remove', item_path(item), method: :delete %></li>
</ul>
<% end %>